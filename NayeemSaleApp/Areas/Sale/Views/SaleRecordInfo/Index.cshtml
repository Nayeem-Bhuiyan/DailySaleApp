                                    url: "/Sale/SaleRecordInfo/Index",
                                    type: "POST",
                                    data: JSON.stringify(frmPaymentRecordData),
                                    dataType: "json",
                                    contentType: "application/json; charset=utf-8",
                                    beforeSend: function () {
                                        $('#btnSave').attr('disabled', 'disabled');
                                        $('#btnSave').val('Submitting...');
                                    },
                                }).done(function (data) {
                                    if ($('#tblAddProducts tbody tr').length == 0) {
                                        $("#btnSave").removeAttr('disabled');
                                        swal.fire('success', 'Saved All Successfully!', 'success');
                                    }
                                }).fail(function () {
                                    $("#btnSave").removeAttr('disabled');
                                })
                            }
                        });
                    }
                });
        })
    </script>
}



