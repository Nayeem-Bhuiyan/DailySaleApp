                                $.ajax({
                                    url: "/Sale/SaleRecordInfo/Index",
                                    type: "POST",
                                    data: JSON.stringify(frmSaleRecordData),
                                    dataType: "json",
                                    contentType: "application/json; charset=utf-8",
                                    beforeSend: function () {
                                        $('#btnSave').attr('disabled', 'disabled');
                                        $('#btnSave').val('Submitting...');
                                    },
                                }).done(function (data) {
                                    CurrentRow.remove();
                                    console.log(data);
                                    $("#btnSave").removeAttr('disabled');

                                }).fail(function () {
                                    $("#btnSave").removeAttr('disabled');
                                })
