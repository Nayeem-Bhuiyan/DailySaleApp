        //            $("#contactNumber").val("");
        //        }
        //        else {
        //            $(this).find("td").eq(1).removeClass("bg-warning");
        //        }
        //    });

        //}


        $('#btnSave').click(function (event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You want to save this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, save it!'
                }).then((result) => {
                    if (result.isConfirmed) {

                        $('#tblAddProducts tbody tr').each(function () {
                            var CurrentRow = $(this);
                            var frmSaleRecordData = {
                                Id :$('#SaleRecordId').val(),
                                CustomerId: $('#CustomerId').val(),
                                ProductId: parseInt($(this).find('td').eq(0).text()),
                                rate: parseInt($(this).find('td').eq(1).text()),
                                quantity: parseInt($(this).find('td').eq(2).text()),
                                billDate: $('#billDate').val(),
                                boucherNumber: uniqueBocherCode(),
                            }
                            
                            var frmPaymentRecordData = {
                                CustomerId: $("#CustomerId").val(),
                                grossAmount: $("#grossAmount").val(),
                                discountAmount: $("#discountAmount").val(),
                                vatAmount: $("#vatAmount").val(),
                                receiveTotal: $("#receiveTotal").val(),
                                payType: $("#payType").val(),
                                remarks: $("#remarks").val(),
                            }
                            


                            if ($('#tblAddProducts tbody tr').length !== 1) {
                                console.log(frmPaymentRecordData);
                                $.ajax({
                                    url: "/Sale/SaleRecordInfo/Index",
                                    type: "POST",
                                    data: JSON.stringify(frmSaleRecordData),
                                    dataType: "json",
                                    contentType: "application/json; charset=utf-8",
                                    beforeSend: function () {
